/* pages/message/message.wxss */
.box{
  width: 90%;
  background-color: #fff;
  height: 700rpx;
  border: 1rpx solid #999;
  border-radius: 10rpx;
  margin: 20rpx auto;
}

.box .box-contain{
  width: 90%;
  margin: 20rpx auto;
  position: relative;
}

.box .box-contain .title{
  font-size: 40rpx;
  font-weight: 400;
}

.box .box-contain .dateTime{
  font-size: 30rpx;
  color: #555;
  padding: 10rpx 0;
}

.box .box-contain .msg{
  width: 100%;
  padding: 20rpx 0;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}

.box .box-contain .msg image{
  width: 100%;
  height: 400rpx;
}

.box .box-contain .msg .info{
  font-size: 36rpx;
  color: #555;
}

.box .box-contain .more{
  margin-top: 10rx;
  font-size: 36rpx;
}

